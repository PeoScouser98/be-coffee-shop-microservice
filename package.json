{
	"name": "server",
	"version": "0.0.1",
	"description": "",
	"type": "commonjs",
	"main": "dist/main.js",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start --watch",
		"start:dev": "nest build --webpack --webpackPath webpack.config.js --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/apps/server/main",
		"lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/server/test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.3",
		"@nestjs/config": "^3.2.0",
		"@nestjs/core": "^10.3.3",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/microservices": "^10.3.3",
		"@nestjs/mongoose": "^10.0.4",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.3.3",
		"bcrypt": "^5.1.1",
		"chalk": "^5.3.0",
		"cloudinary": "^2.0.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"date-fns": "^3.3.1",
		"flat": "^6.0.1",
		"mongoose": "^8.1.2",
		"mongoose-autopopulate": "^1.1.0",
		"mongoose-paginate-v2": "^1.8.0",
		"mongoose-slug-generator": "^1.0.4",
		"nestjs-i18n": "^10.4.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.8.1",
		"streamifier": "^0.1.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.6",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/lodash": "^4.14.202",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.17",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"commitlint": "^18.6.1",
		"copy-webpack-plugin": "^12.0.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-unused-imports": "^3.0.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"run-script-webpack-plugin": "^0.2.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.4",
		"swc-loader": "^0.2.6",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3",
		"webpack": "^5.90.1",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
			"^@app/common/token(|/.*)$": "<rootDir>/libs/common/token/src/$1"
		}
	},
	"lint-staged": {
		"*.ts": [
			"npm run lint",
			"npm run format",
			"git add ."
		]
	},
	"postinstall": "husky install"
}
